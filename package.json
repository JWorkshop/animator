{
  "name": "animator-js",
  "version": "0.0.1",
  "description":
    "An instance class which manages animations by hooking into requestAnimationFrame (or setInterval if not available).",
  "author": "jworkshop",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.7.2"
  },
  "main": "./lib/animator.js",
  "scripts": {
    "build": "babel src -d lib --copy-files"
  },
  "babel": {
    "presets": ["env"]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
      "semi": 2,
      "no-empty": 0
    }
  }
}
